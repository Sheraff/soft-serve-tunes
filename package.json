  "private": true,
  "engines": {
    "node": "^18.12.0",
    "npm": "^8.19.2"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "NODE_OPTIONS=--max_old_space_size=4096 next start",
